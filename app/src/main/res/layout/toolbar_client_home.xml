<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/black">


    <ImageView
        android:id="@+id/menu_img"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/_15sdp"
        android:src="@drawable/ic_menu"
        android:tint="@color/whitess" />

    <customfonts.textview_fira_sans_regular
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/menu_img"
        android:gravity="center|left"
        android:text="@string/the_secret_psychic"
        android:textColor="@color/whitess"
        android:textSize="@dimen/action_bar_text_size"
        android:textStyle="bold"

        />

    <ImageView
        android:id="@+id/filter_img"

        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent"

        android:layout_toLeftOf="@+id/sort_img"
        android:padding="@dimen/_12sdp"
        android:src="@drawable/ic_filter"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/sort_img"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_12sdp"
        android:src="@drawable/ic_sort"
        android:visibility="visible" />
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.7dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:background="@color/line_color"></View>-->
</RelativeLayout>