<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_with_back_black" />


    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_10sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_above_blue"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/userImageContainer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/categoryImage"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginLeft="@dimen/_9sdp"

                            android:padding="@dimen/_5sdp"
                            android:scaleType="fitXY" />

                        <customfonts.textview_fira_sans_regular
                            android:id="@+id/username_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toLeftOf="@+id/video_icon"
                            android:layout_toRightOf="@+id/categoryImage"
                            android:gravity="center|left"
                            android:singleLine="true"
                            android:text="Ali"
                            android:textColor="@color/whitess"
                            android:textSize="@dimen/_16sdp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_9sdp"
                        android:layout_marginRight="@dimen/_9sdp"
                        android:orientation="vertical">

                        <customfonts.textview_fira_sans_regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:singleLine="true"
                            android:text="@string/your_question"
                            android:textColor="@color/whitess"

                            android:textSize="@dimen/_14sdp"


                            />


                        <customfonts.edittext_fira_sans_regular
                            android:id="@+id/question_et"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/rounded_whitess"
                            android:hint="@string/question_heading"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/black" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/circle_gray_dark"
                    android:orientation="vertical">


                    <customfonts.textview_fira_sans_regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="@string/description_txt"
                        android:textColor="@color/whitess"

                        android:textSize="@dimen/_14sdp"


                        />

                    <customfonts.edittext_fira_sans_regular
                        android:id="@+id/description_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_marginLeft="@dimen/_9sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_9sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:background="@drawable/rounded_corners_white"
                        android:gravity="left"
                        android:hint="@string/description_txt"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:padding="@dimen/_8sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textColor="@color/black" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/rounded_bottom_blue"
                    android:orientation="vertical">


                    <customfonts.textview_fira_sans_regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="@string/add_video"
                        android:textColor="@color/whitess"
                        android:textSize="@dimen/_14sdp"


                        />

                    <FrameLayout
                        android:id="@+id/frameContainer"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_below="@+id/toolbar"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageVideo"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"

                            android:src="@drawable/user_image_general_info" />

                        <ImageView

                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="@dimen/_10sdp"
                            android:src="@drawable/add_image_icon" />

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/play_icon"
                            android:tint="@color/blue" />

                    </FrameLayout>


                    <customfonts.textview_fira_sans_regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/upload_video_txt"

                        android:textColor="@color/whitess" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/order_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/rounded_blue"
                    android:gravity="center">

                    <customfonts.textview_fira_sans_regular
                        android:id="@+id/order_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/order"
                        android:textColor="@color/whitess"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:src="@drawable/btn_smile" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"

                    android:background="@drawable/rounded_red"
                    android:gravity="center">

                    <customfonts.textview_fira_sans_regular
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:textColor="@color/whitess"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>
            </LinearLayout>


        </FrameLayout>
    </ScrollView>


</LinearLayout>