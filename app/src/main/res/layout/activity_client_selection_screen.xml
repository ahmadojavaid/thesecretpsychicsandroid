<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientActivities.ClientSelectionScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:background="@color/whitess"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/sign_up_as_client_tv"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/upperContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/relationshipcoaching" />

                    <ImageView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/astrology_horoscopes" />

                    <ImageView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/dreamanalysis" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/tarrotreadings" />

                    <ImageView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/psychicreadings" />

                    <ImageView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/angelinsights" />
                </LinearLayout>
            </LinearLayout>


            <customfonts.textview_fira_sans_regular
                android:id="@+id/sign_up_as_client_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_above="@+id/botom_sign_in_client"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/red_rounded_bg"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/signup_as_client"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp" />


            <LinearLayout
                android:id="@+id/botom_sign_in_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <customfonts.textview_fira_sans_light
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/already_have_account"
                    android:textColor="@color/black" />

                <customfonts.textview_fira_sans_light
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sign_in"
                    android:textColor="@color/black" />

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>