<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdvisorActivities.MyordersActivities.AdvisorMyJobs2">

    <include layout="@layout/toolbar_with_back_black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rounded_blue"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/userImageContainer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/userImage"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_9sdp"
                            android:src="@drawable/user_dummy_pic" />

                        <customfonts.textview_fira_sans_regular
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toLeftOf="@+id/video_icon"
                            android:layout_toRightOf="@+id/userImage"
                            android:gravity="center|left"
                            android:singleLine="true"
                            android:text="ALI"
                            android:textColor="@color/whitess"
                            android:textSize="@dimen/_17sdp" />


                        <ImageView
                            android:id="@+id/video_icon"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:padding="@dimen/_1sdp"
                            android:src="@drawable/play_icon"
                            android:tint="@color/whitess"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <customfonts.textview_fira_sans_bold
                            android:id="@+id/heading_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_9sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_9sdp"
                            android:text="headig"
                            android:textColor="@color/whitess"
                            android:textSize="@dimen/_17sdp"


                            />

                        <customfonts.textview_fira_sans_light
                            android:id="@+id/body_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/circle_gray_dark"
                            android:ellipsize="end"
                            android:paddingLeft="@dimen/_9sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingRight="@dimen/_9sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:text="body"
                            android:textColor="@color/whitess"
                            android:textSize="@dimen/_14sdp"


                            />


                        <RelativeLayout
                            android:id="@+id/videoContainer"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageVideoSrc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/user_image_general_info" />

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/play_icon"
                                android:tint="@color/blue" />


                        </RelativeLayout>

                        <customfonts.textview_fira_sans_light
                            android:id="@+id/date_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:gravity="right"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="Today, 10:17 PM"
                            android:textColor="@color/whitess"
                            android:textSize="@dimen/_11sdp"

                            />


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/counter_tv"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="top|center"
                    android:background="@drawable/circle_blue"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/whitess"
                    android:textSize="@dimen/_16sdp" />


            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/advisor_reply_Tv"
                    android:background="@color/blue" />

                <customfonts.textview_fira_sans_regular
                    android:id="@+id/advisor_reply_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="@string/advisors_reply"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14sdp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/advisor_reply_Tv"
                    android:background="@color/blue" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rounded_above_blue"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/frameContainer"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_below="@+id/toolbar"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageViewVideo"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"

                        android:src="@drawable/user_image_general_info" />

                    <ImageView

                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right|bottom"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/add_image_icon" />

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/play_icon"
                        android:tint="@color/blue" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rounded_bottom_grey"
                android:gravity="center"
                android:orientation="vertical">


                <customfonts.textview_fira_sans_bold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:text="@string/comments"
                    android:textColor="@color/whitess"
                    android:textSize="@dimen/_14sdp" />


                <customfonts.edittext_fira_sans_regular
                    android:id="@+id/commentsAdvisor_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/rounded_whitess"
                    android:focusableInTouchMode="true"
                    android:gravity="left"
                    android:hint="@string/some_text"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>

            <customfonts.textview_fira_sans_regular
                android:id="@+id/repondTorequest_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_green"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/respond_to_request"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>