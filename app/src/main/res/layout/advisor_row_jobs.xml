<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_3sdp">


        <LinearLayout
            android:id="@+id/rounded_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rounded_blue"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/userImageContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:src="@drawable/user_dummy_pic" />

                <customfonts.textview_fira_sans_regular
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/video_icon"
                    android:layout_toRightOf="@+id/userImage"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="ALI"
                    android:textColor="@color/whitess"
                    android:textSize="@dimen/_17sdp" />


                <ImageView
                    android:id="@+id/video_icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/play_icon"
                    android:tint="@color/whitess" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:orientation="vertical">

                <customfonts.textview_fira_sans_bold
                    android:id="@+id/heading_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="asdfadsf"
                    android:textColor="@color/whitess"
                    android:textSize="@dimen/_17sdp"


                    />

                <customfonts.textview_fira_sans_light
                    android:id="@+id/body_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:text="Some description here and Some description there and also this is the additional description. "
                    android:textColor="@color/whitess"
                    android:textSize="@dimen/_14sdp"


                    />

                <customfonts.textview_fira_sans_light
                    android:id="@+id/date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="right"
                    android:text="Today, 10:17 PM"
                    android:textColor="@color/whitess"
                    android:textSize="@dimen/_11sdp"

                    />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/counter_tv"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="top|center"
            android:background="@drawable/circle_blue"
            android:gravity="center"
            android:text=""
            android:textColor="@color/whitess"
            android:textSize="@dimen/_16sdp" />


    </FrameLayout>


</RelativeLayout>