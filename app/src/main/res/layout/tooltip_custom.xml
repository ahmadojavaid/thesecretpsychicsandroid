<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/bg_alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>


    <ImageView
        android:id="@+id/menu_icon_alert"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@drawable/three_dots_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@+id/menu_icon_alert"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_bubble_alert"

            />


        <LinearLayout
            android:id="@+id/labels_COntainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <customfonts.textview_fira_sans_regular
                android:id="@+id/follow_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/add_to_favourite"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <customfonts.textview_fira_sans_regular
                android:id="@+id/sharetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/share_profile"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labels_COntainer"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="@dimen/_135sdp"
                android:layout_height="match_parent"

                android:gravity="center">


                <ImageView
                    android:id="@+id/favoutite_tv"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"

                    android:background="@drawable/ic_favourite"
                    android:scaleType="fitCenter" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/blackOverlay"></LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/twitter_tv"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/ic_twitter"
                    android:scaleType="fitCenter" />


                <ImageView
                    android:id="@+id/facebook_tv"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/ic_share_fb"
                    android:scaleType="fitCenter" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>